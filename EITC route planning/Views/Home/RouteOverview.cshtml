
@{
    ViewBag.Title = "RouteOverview";
}

<h2>Route Overview</h2>

<div class="list-group">
    
    @for(int i = 0; i < 10; i++) {

        <a href="#" class="list-group-item np-y">
            <div class="row">
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-6">
                            <strong>From:</strong> x
                        </div>
                        <div class="col-xs-6">
                            <strong>Duration:</strong> x
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <strong>To:</strong> x
                        </div>
                        <div class="col-xs-6">
                            <strong>Cost:</strong> x
                        </div>
                    </div>
                </div>
            </div>
        </a>
    }
</div>

<div class="list-group">
        <a href="#" class="list-group-item np-y">
            <div class="row">
                <div class="col-xs-6">
                    <strong>Total duration:</strong> x
                </div>
                <div class="col-xs-6">
                    <strong>Total cost:</strong> x
                </div>
            </div>
        </a>
</div>