@using EITC_route_planning.Models
@model EITC_route_planning.Models.Shippment
@{
    ViewBag.Title = "RouteOverview";
}
<h2>Route Overview</h2>
<div class="list-group">

    @for(int i = 0; i < ViewData.Keys.Count - 2; i++)
    {
        <a href="#" class="list-group-item np-y">
            <div class="row">
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-6">
                            <strong>From:</strong> @ViewData["from" + i];
                        </div>
                        <div class="col-xs-6">
                            <strong>Duration:</strong> @ViewData["duration" + i];
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <strong>To:</strong> @ViewData["To" + i];
                        </div>
                        <div class="col-xs-6">
                            <strong>Cost:</strong> @ViewData["price" + i];
                        </div>
                    </div>
                </div>
            </div>
        </a>
    }
</div>
<div class="list-group">
    <a href="#" class="list-group-item np-y">
        <div class="row">
            <div class="col-xs-6">
                <strong>Total duration:</strong> @ViewData["price"];
            </div>
            <div class="col-xs-6">
                <strong>Total cost:</strong> @ViewData["duration"];
            </div>
        </div>
    </a>
    <br />
    <a href="/home" class="btn btn-primary">Back</a>
</div>