@{
    ViewBag.Title = "Home Page";
}
<h1>East India Trading Company</h1>

<form class="row">
    <div class="col-sm-6">
        <label for="weight">Weight</label>
        <input id="weight" type="number" class="form-control" aria-describedby="weightHelp" placeholder="ex: 2.8" aria-describedby="weightAddon">
        <small id="weightHelp" class="form-text text-muted">Helpful text</small>
    </div>
    <div class="col-sm-6">
        <label for="typeOfPackage">Type of package</label>
        <select name="typeOfPackage" class="form-control" aria-describedby="typeOfPackageHelp">
            @for (int i = 0; i < 10; i++)
            {
                <option value=@(i)>@(i)-option</option>
            }
        </select>
        <small id="typeOfPackageHelp" class="form-text text-muted">Helpful text</small>
    </div>
    <div class="col-sm-6">
        <label for="from">From</label>
        <select name="from" class="form-control" aria-describedby="fromHelp">
            @for (int i = 0; i < 10; i++)
            {
                <option value=@(i)>@(i)-from</option>
            }
        </select>
        <small id="fromHelp" class="form-text text-muted">Helpful text</small>
    </div>
    <div class="col-sm-6">
        <label for="to">To</label>
        <select name="to" class="form-control" aria-describedby="toHelp">
            @for (int i = 0; i < 10; i++)
            {
                <option value=@(i)>@(i)-to</option>
            }
        </select>
        <small id="toHelp" class="form-text text-muted">Helpful text</small>
    </div>
    
    <div class="col-sm-12">
        <button type="submit" class="btn btn-default">Search</button>
    </div>
</form>

